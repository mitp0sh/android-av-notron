<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/main_list_medium_padding" android:layout_marginRight="@dimen/main_list_medium_padding" android:baselineAligned="false" android:minHeight="@dimen/list_main_height">
        <ImageView android:id="@id/item_icon" android:layout_width="@dimen/main_list_icon_width" android:layout_height="@dimen/main_list_icon_height" android:layout_marginTop="@dimen/main_list_small_padding" android:layout_marginRight="@dimen/main_list_medium_padding" android:layout_marginBottom="@dimen/main_list_small_padding" android:scaleType="centerInside" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
