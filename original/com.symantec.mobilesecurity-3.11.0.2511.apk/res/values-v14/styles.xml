<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NortonTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:textAppearance">@style/NortonTextAppearance</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textAppearanceLarge">@style/NortonTextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/NortonTextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/NortonTextAppearance.Small</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:textColorTertiary">@color/tertiary_text</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ic_ab_background</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>
    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ActionButtonOverflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_light</item>
    </style>
</resources>
